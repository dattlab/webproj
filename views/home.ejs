<%- include("partials/header"); %>

<h1>Recent posts</h1>

<% posts.slice().reverse().forEach(function(post) { %>
    <div class="new-post-card">
        <h2 class="new-post-card-title">
            <%= post.title %>
        </h2>
        <p class="new-post-card-content">
            <%= post.content.substring(0, 50) %>... 
            <a href="/posts/<%= post.title.replace(/ +/g, '-').toLowerCase() %>">Read more</a>
        </p>
    </div>
<% }) %>

<%- include("partials/footer"); %>
